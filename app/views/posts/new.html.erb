<h1>Create a Post</h1>

<% if @post.errors.any? %>
    <h2>Errors Occurred</h2>
    <ul>
        <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br><br>

    <%= f.label :blogger_id %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br><br>

    <%= f.label :destination_id %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %><br><br>

    <%= f.submit %>
<% end %>